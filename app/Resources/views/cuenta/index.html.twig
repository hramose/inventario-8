{% extends 'DGInventarioBundle:Layout:layout.html.twig' %}

{% block contenido %}
    <h1>Cuenta list</h1>

    <div id="resultado"></div>
    <div class="content-body">
          <div class="panel" data-fill-color="true">
            <div class="panel-heading">
              <div class="panel-control pull-right">
                <a href="#" class="btn btn-icon" data-toggle="panel-refresh" rel="tooltip" data-placement="bottom" title="refresh"><i class="icon-refresh"></i></a>
                <a href="#" class="btn btn-icon" data-toggle="panel-expand" rel="tooltip" data-placement="bottom" title="expand"><i class="arrow_expand"></i></a>
                <a href="#" class="btn btn-icon" data-toggle="panel-collapse" rel="tooltip" data-placement="bottom" title="collapse"><i class="icon_minus_alt2"></i></a>
              </div>
              <h3 class="panel-title">Cuentas</h3>
            </div><!-- /.panel-heading -->

            <div class="panel-body">
              <div class="btn-toolbar clearfix" role="toolbar">
               
                <div class="btn-group btn-group-sm pull-left">
                   <button href="{{ path('admin_cuenta_new') }}" data-toggle="tooltip" data-container="body" title="Nuevo usuario" id="add-datatables1" class="btn btn-default nuevo-registro" role="button">
                    <i class="fa fa-plus"></i>
                      </button> 
                </div>
                <div class="btn-group btn-group-sm pull-left">
                  <button id="edit-datatables1" data-toggle="tooltip" data-container="body" title="Editar usuario" class="btn btn-default datatables1-actions disabled edit-registro" role="button">
                    <i class="fa fa-edit"></i>
                  </button>
                  <button id="delete-datatables1" data-toggle="tooltip" data-container="body" title="Desactivar usuario" class="btn btn-default datatables1-actions disabled" role="button">
                    <i class="fa fa-toggle-off"></i>
                  </button>
                </div>
                <div class="btn-group pull-left">
                  <input id="filterDatatables1" class="form-control input-sm" placeholder="Buscar...">
                </div>
              </div><!-- /btn-toolbar -->
            </div><!-- /.panel-body -->
    
    <table id="datatables1" class="table table-noborder table-hover bordered-top">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombrecuenta</th>
                <th>Email</th>
                <th>Web</th>
                <th>Telefono</th>
                <th>Fax</th>
                <th>Valoragregado</th>
                <th>Tipocuenta</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cuentum in cuentas %}
            <tr>
                <td><a href="{{ path('admin_cuenta_show', { 'id': cuentum.id }) }}">{{ cuentum.id }}</a></td>
                <td>{{ cuentum.nombreCuenta }}</td>
                <td>{{ cuentum.email }}</td>
                <td>{{ cuentum.web }}</td>
                <td>{{ cuentum.telefono }}</td>
                <td>{{ cuentum.fax }}</td>
                <td>{{ cuentum.valorAgregado }}</td>
                <td>{% if cuentum.tipoCuenta %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_cuenta_show', { 'id': cuentum.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_cuenta_edit', { 'id': cuentum.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div><!-- /.panel -->
        
    <ul>
        <li>
            <a href="{{ path('admin_cuenta_new') }}">Create a new entry</a>
        </li>
    </ul>
            </div><!-- /.content -->
{% endblock %}

