<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Persona" table="persona">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombres" type="string" column="nombres" length="100" nullable="true"/>
    <field name="apellidos" type="string" column="apellidos" length="100" nullable="true"/>
    <field name="correo" type="string" column="correo" length="75" nullable="true"/>
    <field name="celular" type="string" column="celular" length="15" nullable="true"/>
    <field name="fijo" type="string" column="fijo" length="15" nullable="true"/>
    <field name="direccion" type="string" column="direccion" length="100" nullable="true"/>
    <field name="foto" type="string" column="foto" length="255" nullable="true"/>
  </entity>
</doctrine-mapping>
