{% extends 'base.html.twig' %}

{% block body %}
    <h1>Producto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ producto.nombre }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if producto.fecha %}{{ producto.fecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ producto.descripcion }}</td>
            </tr>
            <tr>
                <th>Preciocompra</th>
                <td>{{ producto.precioCompra }}</td>
            </tr>
            <tr>
                <th>Precioventa</th>
                <td>{{ producto.precioVenta }}</td>
            </tr>
            <tr>
                <th>Sku</th>
                <td>{{ producto.sku }}</td>
            </tr>
            <tr>
                <th>Serial</th>
                <td>{{ producto.serial }}</td>
            </tr>
            <tr>
                <th>Inventariobajo</th>
                <td>{{ producto.inventarioBajo }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ producto.stock }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_producto_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_producto_edit', { 'id': producto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
