{#{% extends 'base.html.twig' %}#}
{% extends 'DGInventarioBundle:Layout:layout.html.twig' %}

{% block contenido %}
    <h1>Cuenta</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cuenta.id }}</td>
            </tr>
            <tr>
                <th>Nombrecuenta</th>
                <td>{{ cuenta.nombreCuenta }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ cuenta.email }}</td>
            </tr>
            <tr>
                <th>Web</th>
                <td>{{ cuenta.web }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ cuenta.telefono }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ cuenta.fax }}</td>
            </tr>
            <tr>
                <th>Valoragregado</th>
                <td>{{ cuenta.valorAgregado }}</td>
            </tr>
            <tr>
                <th>Tipocuenta</th>
                <td>{% if cuenta.tipoCuenta %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_cuenta_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_cuenta_edit', { 'id': cuenta.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
