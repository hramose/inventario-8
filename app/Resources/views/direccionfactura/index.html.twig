{% extends 'DGInventarioBundle:Layout:layout.html.twig' %}

{% block contenido %}
    <h1>DireccionFactura list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Direccion1</th>
                <th>Direccion2</th>
                <th>Ciudad</th>
                <th>Provinciaestado</th>
                <th>Postalzip</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for direccionFactura in direccionFacturas %}
