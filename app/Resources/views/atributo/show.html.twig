{% extends 'base.html.twig' %}

{% block body %}
    <h1>Atributo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ atributo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ atributo.name }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ atributo.alias }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_atributo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_atributo_edit', { 'id': atributo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
