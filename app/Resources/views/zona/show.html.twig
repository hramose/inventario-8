{% extends 'base.html.twig' %}

{% block body %}
    <h1>Zona</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ zona.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ zona.nombre }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ zona.alias }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ zona.descripcion }}</td>
