                <td>{{ direccionFactura.provinciaEstado }}</td>
                <td>{{ direccionFactura.postalZip }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_direccionfactura_show', { 'id': direccionFactura.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_direccionfactura_edit', { 'id': direccionFactura.id }) }}">edit</a>
                        </li>
